{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "startServerCommand": "corepack yarn start -p 3000",
      "startServerReadyPattern": "Ready in",
      "settings": {
        "maxWaitForLoad": 45000,
        "chromeFlags": "--headless=new --disable-gpu --no-sandbox"
      },
      "url": [
        "http://localhost:3000/"
      ]
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.85
          }
        ],
        "categories:accessibility": [
          "error",
          {
            "minScore": 0.95
          }
        ],
        "categories:best-practices": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "categories:seo": [
          "error",
          {
            "minScore": 0.95
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
